{
  "model": {
    "input_file": "../inputs/kitti_input.py",
    "architecture_file" : "../encoder/vgg.py",
    "objective_file" : "../decoder/multiclass2.py",
    "optimizer_file" : "../optimizer/generic_optimizer.py",
    "evaluator_file" : "../evals/road_eval.py"
  },
  "path": ["../incl"],

  "data": {
    "train_file" : "classification/train4.txt",
    "val_file" : "classification/val4.txt",
    "semantic": true,
    "positive_classnames": ["trunk", "motorway", "primary"]
  },
 
  "arch": {
    "num_channels" : 3,
    "inner_channels" : 100,
    "deep_channels" : 512,
    "whitening": false
  },

  "jitter": {
    "flip": false,
    "random_resize": false,
    "lower_size": 0.4,
    "upper_size": 1.7,
    "sig": 0.15,
    "res_chance": 0.7,
    "fix_shape": false,
    "resize_image": true,
    "image_height" : 384,
    "image_width" : 1248,

    "augment_level": 1
  },

  "logging": {
    "display_iter": 40,
    "eval_iter": 300,
    "write_iter": 1000,
    "save_iter": 2000,
    "image_iter": 10000
  },

  "solver": {
      "opt": "Adam",
      "batch_size": 5,
      "epsilon": 0.00001,
      "threads": 4,
      "learning_rate": 1e-5,
      "learning_rate_step": null,
      "max_steps": 16000
  },
  "use_fcn": false,
  "use_fc": false,
  "only_road": true,
  "road_classes": 2,
  "grid_width": 39,
  "grid_height": 12,
  "clip_norm" : 1.0,
  "wd": 5e-4,
  "down_score": 1
}