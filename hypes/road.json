{
  "model": {
    "input_file": "../inputs/kitti_input.py",
    "architecture_file" : "../encoder/vgg.py",
    "objective_file" : "../decoder/multiclass2.py",
    "optimizer_file" : "../optimizer/generic_optimizer.py",
    "evaluator_file" : "../evals/road_eval.py"
  },
  "path": ["../incl"],

  "data": {
    "train_file" : "classification/train_all.txt",
    "val_file" : "classification/test.txt"
  },
 
  "arch": {
    "num_channels" : 3,
    "inner_channels" : 300,
    "deep_channels" : 512,
    "whitening": false
  },

  "jitter": {
    "fix_shape": true,
    "image_height" : 384,
    "image_width" : 1248,

    "augment_level": 0

  },

  "logging": {
    "display_iter": 40,
    "eval_iter": 200,
    "write_iter": 1000,
    "save_iter": 2000,
    "image_iter": 10000
  },

  "solver": {
      "opt": "Adam",
      "batch_size": 1,
      "epsilon": 0.00001,
      "threads": 4,
      "learning_rate": 1e-5,
      "learning_rate_step": null,
      "max_steps": 18000
  },
  "use_fcn": false,
  "use_fc": true,
  "only_road": true,
  "road_classes": 2,
  "grid_width": 39,
  "grid_height": 12,
  "clip_norm" : 1.0,
  "wd": 5e-4,
  "down_score": 0.01
}