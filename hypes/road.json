{
  "model": {
    "input_file": "../inputs/kitti_input.py",
    "architecture_file" : "../encoder/vgg.py",
    "objective_file" : "../decoder/kitti_multiloss.py",
    "optimizer_file" : "../optimizer/generic_optimizer.py",
    "evaluator_file" : "../evals/road_eval.py"
  },
  "path": ["../incl"],

  "data": {
    "train_file" : "classification/train.txt",
    "val_file" : "classification/test.txt"
  },
 
  "arch": {
    "num_channels" : 3,
    "whitening": false
  },

  "jitter": {
    "fix_shape": true,
    "image_height" : 384,
    "image_width" : 1248,

    "augment_level": 1

  },

  "logging": {
    "display_iter": 20,
    "eval_iter": 100,
    "write_iter": 100,
    "save_iter": 2000,
    "image_iter": 10000
  },

  "solver": {
      "opt": "Adam",
      "batch_size": 1,
      "epsilon": 0.00001,
      "threads": 4,
      "learning_rate": 1e-5,
      "learning_rate_step": null,
      "max_steps": 22000
  },
  "clip_norm" : 1.0,
  "wd": 5e-4
}